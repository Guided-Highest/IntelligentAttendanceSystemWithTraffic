@{
    ViewData["Title"] = "Device Disconnected";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-plug"></i> Device Disconnected</h4>
                </div>
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle fa-5x text-warning"></i>
                    </div>

                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <strong><i class="fas fa-exclamation-circle"></i> Connection Lost:</strong>
                        The Dahua device is currently disconnected.
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <br>
                            <strong>Details:</strong>

                            @TempData["ErrorMessage"]
                        }
                    </div>

                    <p class="text-muted mb-4">The application is attempting to reconnect automatically...</p>

                    <div class="mb-4">
                        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                            <span class="visually-hidden">Reconnecting...</span>
                        </div>
                    </div>

                    <div class="progress mb-4" style="height: 10px;">
                        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 100%"></div>
                    </div>

                    <div class="row text-start mb-4">
                        <div class="col-md-8 offset-md-2">
                            <div class="card">
                                <div class="card-body">
                                    <h6 class="card-title">Troubleshooting Steps:</h6>
                                    <ol class="mb-0">
                                        <li>Check device power supply</li>
                                        <li>Verify network connectivity</li>
                                        <li>Ensure device is not in maintenance mode</li>
                                        <li>Check firewall settings</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-block">
                        <a href="@Url.Action("Initialize")" class="btn btn-primary btn-lg me-md-2">
                            <i class="fas fa-bolt"></i> Attempt Immediate Reconnection
                        </a>
                        <a href="@Url.Action("AddDevice")" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-cog"></i> Update Device Settings
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh to check if reconnected
        let refreshCount = 0;
        const maxRefreshAttempts = 30; // 5 minutes (10 seconds * 30)

        function checkReconnection() {
            refreshCount++;

            if (refreshCount >= maxRefreshAttempts) {
                // Stop auto-refresh after max attempts
                console.log('Stopping auto-refresh after maximum attempts');
                return;
            }

            // Show countdown
            const countdownElement = document.getElementById('countdown');
            if (countdownElement) {
                countdownElement.textContent = `Refreshing in ${(maxRefreshAttempts - refreshCount) * 10} seconds`;
            }

            // Refresh every 10 seconds
            setTimeout(function() {
                window.location.reload();
            }, 10000);
        }

        // Start the reconnection checking
        checkReconnection();
    </script>
}