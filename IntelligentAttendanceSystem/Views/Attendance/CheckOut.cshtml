@model Attendance
@{
    ViewData["Title"] = "Check Out";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Check Out</h3>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h5>Today's Check-in Details</h5>
                    <p><strong>Date:</strong> @Model.Date.ToString("dd/MM/yyyy")</p>
                    <p><strong>Check-in Time:</strong> @Model.CheckInTime.ToString("HH:mm")</p>
                    <p><strong>Status:</strong> <span class="badge bg-success">@Model.Status</span></p>
                </div>

                <form asp-action="CheckOut" method="post">
                    <input type="hidden" name="attendanceId" value="@Model.AttendanceId" />

                    <div class="form-group">
                        <label for="checkOutTime" class="control-label">Check Out Time</label>
                        <input type="time" id="checkOutTime" name="checkOutTime" class="form-control"
                               value="@DateTime.Now.ToString("HH:mm")" />
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-warning btn-block">Check Out</button>
                        <a asp-action="Dashboard" asp-controller="Home" class="btn btn-secondary btn-block">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Set current time for check-out
            var now = new Date();
            var timeString = now.getHours().toString().padStart(2, '0') + ':' +
                           now.getMinutes().toString().padStart(2, '0');
            $('#checkOutTime').val(timeString);
        });
    </script>
}