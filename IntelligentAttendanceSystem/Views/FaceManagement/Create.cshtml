@model FaceUserCreateRequest

@{
    ViewData["Title"] = "Add New Face User";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-user-plus"></i> Add New Face User</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data" id="createUserForm">
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Name" class="form-label required">Full Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter full name" required>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Gender" class="form-label required">Gender</label>
                                    <select asp-for="Gender" class="form-select" required>
                                        <option value="">Select Gender</option>
                                        @foreach (var gender in Enum.GetValues(typeof(Gender)))
                                        {
                                            <option value="@gender">@gender</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="BirthDate" class="form-label">Birth Date</label>
                                    <input asp-for="BirthDate" type="date" class="form-control">
                                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Region"></label>
                                    <select asp-for="Region" asp-items="ViewBag.Countries" class="form-control">
                                        <option value="">-- Select Country --</option>
                                    </select>
                                    <span asp-validation-for="Region" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CredentialType"></label>
                                    <select asp-for="CredentialType" asp-items="Html.GetEnumSelectList<CredentialType>()" class="form-control">
                                        <option value="">-- Select Credential Type --</option>
                                    </select>
                                    <span asp-validation-for="CredentialType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CredentialNumber"></label>
                                    <input asp-for="CredentialNumber" class="form-control" />
                                    <span asp-validation-for="CredentialNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Department" class="form-label">Class</label>
                                    <input asp-for="Department" class="form-control" placeholder="e.g., IT, HR, Sales">
                                    <span asp-validation-for="Department" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Position" class="form-label">Section</label>
                                    <input asp-for="Position" class="form-control" placeholder="e.g., Manager, Developer">
                                    <span asp-validation-for="Position" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Face Image Upload -->
                        <div class="form-group mb-4">
                            <label asp-for="FaceImage" class="form-label required">Face Image</label>
                            <div class="border rounded p-3 text-center">
                                <div id="imagePreview" class="mb-3" style="display: none;">
                                    <img id="previewImg" class="img-thumbnail" style="max-height: 200px;">
                                </div>
                                <div id="uploadArea" class="p-4 border-dashed rounded">
                                    <i class="fas fa-cloud-upload-alt fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">Drag & drop a face image here or click to browse</p>
                                    <input asp-for="FaceImage" type="file" class="form-control d-none" id="faceImageInput" accept="image/*" required>
                                    <button type="button" class="btn btn-outline-primary" onclick="document.getElementById('faceImageInput').click()">
                                        <i class="fas fa-folder-open"></i> Browse Files
                                    </button>
                                </div>
                            </div>
                            <span asp-validation-for="FaceImage" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Upload a clear frontal face image for better recognition accuracy. Supported formats: JPG, PNG, JPEG.
                            </small>
                        </div>

                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="addToDevice" checked>
                                <label class="form-check-label" for="addToDevice">
                                    Add this user to device face database immediately
                                </label>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index")" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Create User
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Image Guidelines Card -->
            <div class="card mt-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Image Guidelines</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>✅ Recommended:</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-check text-success me-2"></i> Clear frontal face</li>
                                <li><i class="fas fa-check text-success me-2"></i> Good lighting</li>
                                <li><i class="fas fa-check text-success me-2"></i> Neutral expression</li>
                                <li><i class="fas fa-check text-success me-2"></i> No hats or sunglasses</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>❌ Avoid:</h6>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-times text-danger me-2"></i> Blurry images</li>
                                <li><i class="fas fa-times text-danger me-2"></i> Side profiles</li>
                                <li><i class="fas fa-times text-danger me-2"></i> Heavy shadows</li>
                                <li><i class="fas fa-times text-danger me-2"></i> Face obstructions</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Image preview functionality
        document.getElementById('faceImageInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const previewImg = document.getElementById('previewImg');
                    const imagePreview = document.getElementById('imagePreview');
                    const uploadArea = document.getElementById('uploadArea');

                    previewImg.src = e.target.result;
                    imagePreview.style.display = 'block';
                    uploadArea.style.display = 'none';
                }
                reader.readAsDataURL(file);
            }
        });

        // Drag and drop functionality
        const uploadArea = document.getElementById('uploadArea');

        uploadArea.addEventListener('dragover', function(e) {
            e.preventDefault();
            this.classList.add('border-primary', 'bg-light');
        });

        uploadArea.addEventListener('dragleave', function(e) {
            e.preventDefault();
            this.classList.remove('border-primary', 'bg-light');
        });

        uploadArea.addEventListener('drop', function(e) {
            e.preventDefault();
            this.classList.remove('border-primary', 'bg-light');

            const files = e.dataTransfer.files;
            if (files.length > 0) {
                document.getElementById('faceImageInput').files = files;

                // Trigger change event
                const event = new Event('change');
                document.getElementById('faceImageInput').dispatchEvent(event);
            }
        });

        // Form validation
        document.getElementById('createUserForm').addEventListener('submit', function(e) {
            const faceImage = document.getElementById('faceImageInput').files[0];
            if (!faceImage) {
                e.preventDefault();
                alert('Please select a face image.');
                return false;
            }

            // Validate image size (max 5MB)
            if (faceImage.size > 5 * 1024 * 1024) {
                e.preventDefault();
                alert('Image size should be less than 5MB.');
                return false;
            }

            // Validate image type
            const validTypes = ['image/jpeg', 'image/jpg', 'image/png'];
            if (!validTypes.includes(faceImage.type)) {
                e.preventDefault();
                alert('Please select a valid image file (JPG, JPEG, or PNG).');
                return false;
            }

            return true;
        });
    </script>
}