@model FaceUserUpdateRequest

@{
    ViewData["Title"] = "Edit Face User";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-edit"></i> Edit Face User</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data" id="editUserForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@ViewContext.RouteData.Values["id"]" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Name" class="form-label required">Full Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter full name" required>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Gender" class="form-label required">Gender</label>
                                    <select asp-for="Gender" class="form-select" required>
                                        <option value="">Select Gender</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="BirthDate" class="form-label">Birth Date</label>
                                    <input asp-for="BirthDate" type="date" class="form-control">
                                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="CredentialNumber" class="form-label">Card Number</label>
                                    <input asp-for="CredentialNumber" class="form-control" placeholder="Optional card number">
                                    <span asp-validation-for="CredentialNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Department" class="form-label">Department</label>
                                    <input asp-for="Department" class="form-control" placeholder="e.g., IT, HR, Sales">
                                    <span asp-validation-for="Department" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Position" class="form-label">Position</label>
                                    <input asp-for="Position" class="form-control" placeholder="e.g., Manager, Developer">
                                    <span asp-validation-for="Position" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Face Image Update -->
                        <div class="form-group mb-4">
                            <label asp-for="FaceImage" class="form-label">Update Face Image (Optional)</label>
                            <div class="border rounded p-3">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div id="currentImage" class="text-center mb-3">
                                            <p class="text-muted small">Current Image</p>
                                            <!-- Current image will be loaded via JavaScript -->
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div id="newImagePreview" class="text-center mb-3" style="display: none;">
                                            <p class="text-muted small">New Image Preview</p>
                                            <img id="previewImg" class="img-thumbnail" style="max-height: 150px;">
                                        </div>
                                        <div id="uploadArea" class="p-3 border-dashed rounded text-center">
                                            <i class="fas fa-cloud-upload-alt fa-2x text-muted mb-2"></i>
                                            <p class="text-muted small mb-2">Click to upload new image</p>
                                            <input asp-for="FaceImage" type="file" class="form-control d-none" id="faceImageInput" accept="image/*">
                                            <button type="button" class="btn btn-outline-primary btn-sm" onclick="document.getElementById('faceImageInput').click()">
                                                <i class="fas fa-upload"></i> Upload New Image
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <span asp-validation-for="FaceImage" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Leave empty to keep the current image. Upload a clear frontal face image for better recognition.
                            </small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index")" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Update User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Load current user image (you would typically get this from the model)
        document.addEventListener('DOMContentLoaded', function() {
            // This would be populated with the actual current image from the server
            const currentImageDiv = document.getElementById('currentImage');
            currentImageDiv.innerHTML = `
                <div class="text-muted">
                    <i class="fas fa-user fa-3x mb-2"></i>
                    <p>Current image stored in database</p>
                </div>
            `;
        });

        // Image preview for new upload
        document.getElementById('faceImageInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const previewImg = document.getElementById('previewImg');
                    const newImagePreview = document.getElementById('newImagePreview');

                    previewImg.src = e.target.result;
                    newImagePreview.style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        });

        // Form validation
        document.getElementById('editUserForm').addEventListener('submit', function(e) {
            const faceImage = document.getElementById('faceImageInput').files[0];

            if (faceImage) {
                // Validate image size (max 5MB)
                if (faceImage.size > 5 * 1024 * 1024) {
                    e.preventDefault();
                    alert('Image size should be less than 5MB.');
                    return false;
                }

                // Validate image type
                const validTypes = ['image/jpeg', 'image/jpg', 'image/png'];
                if (!validTypes.includes(faceImage.type)) {
                    e.preventDefault();
                    alert('Please select a valid image file (JPG, JPEG, or PNG).');
                    return false;
                }
            }

            return true;
        });
    </script>
}