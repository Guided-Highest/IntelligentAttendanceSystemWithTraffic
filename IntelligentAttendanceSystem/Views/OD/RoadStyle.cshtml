        document.getElementById('zoom-to-area').addEventListener('click', zoomToPlottedArea);

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', function() {
            initializeTrafficMonitoring();
            // Initialize the visualization
            generateTrafficCounts();
            updateSpeedDisplay();
            updateDensityDisplay();
            animateVehicles();

            // Auto-zoom to plotted area on initial load
            setTimeout(zoomToPlottedArea, 1000);
        });
