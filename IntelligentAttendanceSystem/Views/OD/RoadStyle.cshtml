        }).addTo(map);

        // Animation control variables
        let animationRunning = true;
        let animationSpeed = 1;
        let vehicleDensity = 5;
        let arrowDensity = 5;
        let movingVehicles = [];

        // NEW: Function to zoom to the plotted area
        function zoomToPlottedArea() {
            // Create a bounds object to contain all points
            const bounds = L.latLngBounds();

            // Add all route points to the bounds
            odData.forEach(route => {
