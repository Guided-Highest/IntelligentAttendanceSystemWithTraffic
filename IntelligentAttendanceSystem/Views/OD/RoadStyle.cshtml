                fullscreenBtn.innerHTML = '⛶';
                fullscreenBtn.title = 'Exit Full Screen';

                // Show panel toggle button
                panelToggle.style.display = 'flex';
                zoomToAreaBtn.style.display = 'flex';

                // Make panel draggable in full screen mode
                makePanelDraggable();
            } else {
                body.classList.remove('fullscreen-mode');
                fullscreenBtn.innerHTML = '⛶';
                fullscreenBtn.title = 'Enter Full Screen';

                // Hide panel toggle button
                panelToggle.style.display = 'none';
                zoomToAreaBtn.style.display = 'none';

                // Reset panel position when exiting full screen
                const panel = document.querySelector('.panel');
                panel.style.transform = 'none';
                panel.classList.remove('hidden');
